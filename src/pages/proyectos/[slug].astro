---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import HeaderV4 from "../../components/HeaderV4.astro";
import Footer from "../../components/Footer.astro"; // Corrected import path
import SchedulerV3 from "../../components/SchedulerV3.astro"; // Corrected import path

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} | Webkode`}>
  <HeaderV4 />

  <article class="bg-black text-white min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[80vh] w-full overflow-hidden">
      <div class="absolute inset-0">
        <img
          src={project.data.coverImage}
          alt={project.data.title}
          class="w-full h-full object-cover opacity-60"
        />
        <div
          class="absolute inset-0 bg-linear-to-t from-black via-black/40 to-transparent"
        >
        </div>
      </div>

      <div class="absolute bottom-0 left-0 w-full p-8 md:p-20">
        <div class="max-w-9xl mx-auto">
          <div
            class="flex flex-col md:flex-row md:items-end justify-between gap-8"
          >
            <h1
              class="text-6xl md:text-8xl lg:text-9xl font-bold tracking-tighter leading-[0.85] uppercase"
            >
              {project.data.title}
            </h1>
            <div class="flex flex-col gap-2 md:text-right">
              <span
                class="text-accent font-mono tracking-widest text-sm uppercase"
                >Cliente</span
              >
              <span class="text-xl font-light">{project.data.client}</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Info Grid -->
    <section
      class="border-y border-white/10 bg-brand-surface/30 backdrop-blur-sm relative z-10"
    >
      <div
        class="max-w-[1800px] mx-auto grid grid-cols-2 md:grid-cols-4 divide-x divide-white/10 border-x border-white/10"
      >
        <div class="p-8">
          <span
            class="text-xs text-brand-muted uppercase tracking-widest block mb-2"
            >Año</span
          >
          <span class="text-2xl font-medium">{project.data.year}</span>
        </div>
        <div class="p-8">
          <span
            class="text-xs text-brand-muted uppercase tracking-widest block mb-2"
            >Rol</span
          >
          <div class="flex flex-col">
            {
              project.data.services.map((s) => (
                <span class="text-lg font-light">{s}</span>
              ))
            }
          </div>
        </div>
        <div
          class="p-8 col-span-2 md:border-r border-white/10 flex items-center justify-between group"
        >
          <div>
            <span
              class="text-xs text-brand-muted uppercase tracking-widest block mb-2"
              >URL</span
            >
            <a
              href={project.data.link}
              target="_blank"
              class="text-2xl font-medium hover:text-accent transition-colors flex items-center gap-2"
            >
              Ver Proyecto en Vivo
              <span class="group-hover:translate-x-1 transition-transform"
                >→</span
              >
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="py-24 px-4 sm:px-8">
      <div
        class="max-w-4xl mx-auto prose prose-invert prose-lg prose-headings:font-bold prose-headings:tracking-tight prose-p:font-light prose-p:leading-relaxed prose-img:rounded-sm"
      >
        <Content />
      </div>
    </section>

    <!-- Gallery (if exists) -->
    {
      project.data.gallery && (
        <section class="py-12 bg-white/5">
          <div class="max-w-[1800px] mx-auto px-4 md:px-8">
            <h3 class="text-sm font-light tracking-[0.2em] text-brand-muted uppercase mb-12">
              Galería del proyecto
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {project.data.gallery.map((img) => (
                <img
                  src={img}
                  alt="Gallery"
                  class="w-full h-auto object-cover border border-white/10"
                />
              ))}
            </div>
          </div>
        </section>
      )
    }

    <section class="border-t border-white/10 mt-32">
      <SchedulerV3 />
    </section>
  </article>

  <Footer />
</Layout>
