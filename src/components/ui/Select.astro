---
interface Props extends astroHTML.JSX.SelectHTMLAttributes {
  error?: boolean;
}

const { class: className, error, ...props } = Astro.props;
---

<div class="relative">
  <select
    class:list={[
      "w-full bg-transparent border border-white/10 px-4 py-4 text-white focus:outline-none focus:border-accent focus:bg-white/2 transition-all text-sm font-medium appearance-none cursor-pointer rounded-none",
      error && "border-red-500 focus:border-red-500",
      className,
    ]}
    {...props}
  >
    <slot />
  </select>
  <div
    class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-zinc-600"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="14"
      height="14"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"><path d="m6 9 6 6 6-6"></path></svg
    >
  </div>
</div>
