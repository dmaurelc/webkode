---
const links = [
  { name: "Soluciones", href: "#soluciones" },
  { name: "Proyectos", href: "/proyectos" },
  { name: "FAQ", href: "#faq" },
  { name: "Contacto", href: "#contacto" },
];
---

<header
  id="header-v4"
  class="fixed top-6 left-1/2 -translate-x-1/2 w-[92%] max-w-9xl z-10000 transition-all duration-500 ease-out"
>
  <div
    class="relative w-full h-16 md:h-20 bg-black/40 backdrop-blur-xl border border-white/10 px-6 md:px-10 flex items-center justify-between shadow-[0_20px_50px_rgba(0,0,0,0.5)]"
  >
    <!-- LOGO -->
    <div class="flex items-center shrink-0">
      <a href="/" class="group flex items-center gap-3">
        <div
          class="w-8 h-8 flex items-center justify-center transition-all duration-500 overflow-hidden text-white group-hover:text-accent"
        >
          <svg viewBox="0 0 100 100" class="w-full h-full">
            <rect x="5" y="5" width="90" height="90" fill="currentColor"></rect>
            <path
              d="M25 30 L35 22 V68 L25 76 V30 Z M45 48 L55 40 V68 L45 76 V48 Z M65 30 L75 22 V68 L65 76 V30 Z"
              fill="black"
              transform="scale(1.1) translate(-4.5, -4.5)"></path>
          </svg>
        </div>
        <span
          class="hidden sm:block text-xl font-black tracking-tighter text-white uppercase"
          >webkode</span
        ><span class="text-[10px] font-sans text-zinc-500 transition-opacity"
          >FROM CL</span
        >
      </a>
    </div>

    <!-- DESKTOP NAV (CENTRAL) -->
    <nav
      class="hidden md:flex items-center absolute left-1/2 -translate-x-1/2 gap-8 lg:gap-12"
    >
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-xs uppercase tracking-[0.3em] font-semibold text-white/50 hover:text-white transition-all hover:tracking-[0.4em] relative group py-2"
          >
            {link.name}
            <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-[2px] bg-accent transition-all duration-300 group-hover:w-full" />
          </a>
        ))
      }
    </nav>

    <!-- RIGHT ACTION / MOBILE TRIGGER -->
    <div class="flex items-center gap-4">
      <!-- Desktop CTA -->
      <a
        href="#contacto"
        class="hidden md:flex h-10 items-center px-6 bg-accent text-black hover:bg-white transition-colors duration-500 font-semibold text-xs uppercase tracking-widest"
      >
        Comenzar
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="3"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="group-hover:translate-x-1 ml-2 transition-transform"
          ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
        >
      </a>

      <!-- Mobile Trigger -->
      <button
        id="v4-mobile-trigger"
        class="md:hidden w-12 h-12 flex flex-col items-center justify-center bg-white/5 hover:bg-white/10 border border-white/10 text-white active:scale-90 transition-all group"
        aria-label="Menu"
      >
        <div class="relative w-6 h-5">
          <span
            class="absolute top-0 left-0 w-full h-0.5 bg-current transition-all duration-500 ease-out"
            id="v4-m-1"></span>
          <span
            class="absolute top-1/2 left-0 -translate-y-1/2 w-full h-0.5 bg-current transition-all duration-500 ease-out"
            id="v4-m-2"></span>
          <span
            class="absolute bottom-0 left-0 w-full h-0.5 bg-current transition-all duration-500 ease-out"
            id="v4-m-3"></span>
        </div>
      </button>
    </div>

    <!-- MOBILE MENU CARD -->
    <div
      id="v4-mobile-menu"
      class="absolute top-[calc(100%+0.75rem)] left-0 w-full bg-black/95 backdrop-blur-2xl border border-white/10 p-8 flex flex-col gap-6 opacity-0 invisible translate-y-4 transition-all duration-500 ease-out z-[-1]"
    >
      <div class="flex flex-col gap-4">
        <span
          class="text-[9px] font-black text-zinc-600 uppercase tracking-[0.5em]"
          >MENU</span
        >
        <nav class="flex flex-col gap-2">
          {
            links.map((link, i) => (
              <a
                href={link.href}
                class="v4-m-link text-3xl font-black text-white uppercase tracking-tighter py-3 flex items-center justify-between group"
              >
                <span>{link.name}</span>
                <span class="text-xs font-sans text-accent opacity-0 group-hover:opacity-100 transition-opacity">
                  0{i + 1}
                </span>
              </a>
            ))
          }
        </nav>
      </div>

      <div class="pt-6 border-t border-white/5 flex flex-col gap-4">
        <a
          href="#agendar"
          class="w-full h-14 flex items-center justify-center bg-white text-black font-black text-xs uppercase tracking-widest"
        >
          Empezar un Proyecto
        </a>
        <div
          class="flex justify-between items-center text-[9px] text-zinc-500 font-bold uppercase tracking-widest"
        >
          <span>Los Andes, CL</span>
          <span>Webkode 2026</span>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function initHeaderV4() {
    const header = document.getElementById("header-v4");
    const trigger = document.getElementById("v4-mobile-trigger");
    const menu = document.getElementById("v4-mobile-menu");
    const m1 = document.getElementById("v4-m-1");
    const m2 = document.getElementById("v4-m-2");
    const m3 = document.getElementById("v4-m-3");
    const mLinks = document.querySelectorAll(".v4-m-link");

    let isMenuOpen = false;

    if (!trigger || !menu) return;

    function toggleMenu() {
      isMenuOpen = !isMenuOpen;

      if (menu && m1 && m2 && m3) {
        if (isMenuOpen) {
          menu.classList.remove("opacity-0", "invisible", "translate-y-4");
          menu.classList.add("opacity-100", "translate-y-0");

          if (m1 && m2 && m3) {
            m1.style.top = "50%";
            m1.style.transform = "translateY(-50%) rotate(45deg)";

            m2.style.opacity = "0";
            m2.style.transform = "translateY(-50%) scale(0)";

            m3.style.bottom = "auto";
            m3.style.top = "50%";
            m3.style.transform = "translateY(-50%) rotate(-45deg)";
          }
        } else {
          menu.classList.add("opacity-0", "invisible", "translate-y-4");
          menu.classList.remove("opacity-100", "translate-y-0");

          if (m1 && m2 && m3) {
            m1.style.top = "0";
            m1.style.transform = "translateY(0) rotate(0)";

            m2.style.opacity = "1";
            m2.style.transform = "translateY(-50%) scale(1)";

            m3.style.top = "auto";
            m3.style.bottom = "0";
            m3.style.transform = "translateY(0) rotate(0)";
          }
        }
      }
    }

    trigger?.addEventListener("click", toggleMenu);
    mLinks.forEach((link) =>
      link.addEventListener("click", () => isMenuOpen && toggleMenu())
    );

    // Scroll effect
    const scrollHandler = () => {
      if (header) {
        if (window.scrollY > 50) {
          header.classList.add("top-4");
          header.classList.remove("top-6");
          header.querySelector("div")?.classList.add("bg-black/80", "h-16");
          header.querySelector("div")?.classList.remove("bg-black/40", "h-20");
        } else {
          header.classList.add("top-6");
          header.classList.remove("top-4");
          header.querySelector("div")?.classList.add("bg-black/40", "h-20");
          header.querySelector("div")?.classList.remove("bg-black/80", "h-16");
        }
      }
    };

    window.addEventListener("scroll", scrollHandler);

    // Close on outside click
    const clickHandler = (e: MouseEvent) => {
      if (isMenuOpen && !header?.contains(e.target as Node)) {
        toggleMenu();
      }
    };
    document.addEventListener("click", clickHandler);
  }

  initHeaderV4();
  document.addEventListener("astro:page-load", initHeaderV4);
</script>

<style>
  #header-v4 {
    will-change: transform, top;
  }

  #v4-mobile-menu {
    box-shadow:
      0 30px 60px -12px rgba(0, 0, 0, 0.8),
      0 18px 36px -18px rgba(0, 0, 0, 0.5);
  }

  .v4-m-link {
    transition: transform 0.3s ease;
  }

  .v4-m-link:hover {
    transform: translateX(8px);
  }
</style>
