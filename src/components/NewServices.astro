---
const services = [
  {
    number: "Servicio #1",
    title: "Planificación",
    description: "Documentación y generación de PRD técnico",
    icon: "M12 20h9 M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z", // Lucide Edit icon simplified
  },
  {
    number: "Servicio #2",
    title: "Diseño UI/UX",
    description: "Diseño de interfaces para proyectos web",
    icon: "M12 19l7-7 3 3-7 7-3-3z M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z", // Simplified Pen/Art icon
  },
  {
    number: "Servicio #3",
    title: "Desarrollo Web",
    description: "Implementación de sistemas web modernos",
    icon: "M16 18l6-6-6-6 M8 6l-6 6 6 6", // Brackets/Code icon
  },
];
---

<section
  id="servicios"
  class="bg-brand-bg py-32 border-t border-brand-border/50 overflow-hidden"
>
  <div class="max-w-9xl mx-auto px-8">
    <!-- Header -->
    <div
      class="flex flex-col md:flex-row justify-between items-start mb-24 gap-12"
    >
      <div class="flex items-center gap-4 mb-8 md:mb-10">
        <div class="w-8 md:w-12 h-px bg-accent"></div>
        <span
          class="text-xs font-light tracking-[0.4em] uppercase text-brand-muted"
          >Nuestros Servicios</span
        >
      </div>
      <h2
        class="text-4xl md:text-6xl font-bold tracking-tighter text-white max-w-2xl text-left md:text-right leading-[0.9] md:ml-auto"
      >
        Soluciones <br class="md:flex hidden" />
        <span class="text-accent italic">Web</span>
      </h2>
    </div>

    <!-- Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 border-t border-l border-brand-border"
    >
      {
        services.map((service) => (
          <div class="group border-r border-b border-brand-border p-12 flex flex-col justify-between min-h-[440px] hover:bg-white/1 transition-all duration-500">
            <div class="flex justify-between items-start">
              <span class="text-[10px] font-bold tracking-[0.2em] uppercase text-brand-muted group-hover:text-zinc-300 transition-colors">
                {service.number}
              </span>
              <div class="text-zinc-600 group-hover:text-accent transition-all duration-500 scale-110">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d={service.icon} />
                </svg>
              </div>
            </div>

            <div class="mt-auto transform group-hover:translate-x-2 transition-transform duration-500">
              <h3 class="text-4xl md:text-5xl font-bold text-white mb-5 leading-tight tracking-tighter">
                {service.title}
              </h3>
              <p class=" font-light text-brand-muted">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
