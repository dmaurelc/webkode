---

<section
  id="agendar"
  class="py-24 px-8 max-w-9xl mx-auto border-t border-brand-border/30 relative overflow-hidden"
>
  <!-- Background Glows -->
  <div
    class="absolute top-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl pointer-events-none -mr-48 -mt-48"
  >
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24 items-start">
    <!-- Left: Studio Info -->
    <div class="lg:col-span-4 flex flex-col gap-10">
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <div class="w-8 h-px bg-accent"></div>
          <span
            class="text-[9px] font-black tracking-[0.4em] uppercase text-brand-muted"
            >Contacto / v2</span
          >
        </div>
        <h2
          class="text-5xl md:text-7xl font-bold tracking-tighter text-white uppercase leading-[0.9]"
        >
          ¿Listo para <br />
          <span class="text-accent underline decoration-1 underline-offset-8"
            >comenzar?</span
          >
        </h2>
        <p
          class="text-base text-brand-muted font-normal leading-relaxed max-w-xs transition-opacity hover:opacity-100"
        >
          Transformamos visiones audaces en arquitecturas digitales de alto
          rendimiento.
        </p>
      </div>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-8 py-8 border-y border-white/5"
      >
        <div class="group">
          <span
            class="text-[8px] font-black tracking-[0.2em] uppercase text-zinc-600 block mb-2"
            >Email</span
          >
          <a
            href="mailto:hola@webkode.cl"
            class="text-lg font-bold text-white hover:text-accent transition-all"
            >hola@webkode.cl</a
          >
        </div>
        <div class="group">
          <span
            class="text-[8px] font-black tracking-[0.2em] uppercase text-zinc-600 block mb-2"
            >WhatsApp</span
          >
          <a
            href="#"
            class="text-lg font-bold text-white hover:text-accent transition-all"
            >+(56) 9 0000 0000</a
          >
        </div>
      </div>

      <div class="flex items-center gap-4">
        <div class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></div>
        <span
          class="text-[9px] font-bold tracking-widest uppercase text-zinc-500"
        >
          Los Andes <span
            id="santiago-clock-v2"
            class="text-white ml-2 tabular-nums">00:00:00</span
          >
        </span>
      </div>
    </div>

    <!-- Right: Minimal Form -->
    <div class="lg:col-span-8">
      <form class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-10 group/form">
        <!-- Name -->
        <div class="space-y-3">
          <label
            for="v2-name"
            class="text-[8px] font-black tracking-[0.3em] uppercase text-zinc-500 block ml-1"
            >01. Tu Nombre</label
          >
          <input
            type="text"
            id="v2-name"
            placeholder="Ej. Juan Pérez"
            class="w-full bg-white/5 border-b border-white/10 px-4 py-4 text-white placeholder:text-zinc-800 focus:outline-none focus:border-accent transition-all text-sm hover:bg-white/[0.07]"
          />
        </div>

        <!-- Email -->
        <div class="space-y-3">
          <label
            for="v2-email"
            class="text-[8px] font-black tracking-[0.3em] uppercase text-zinc-500 block ml-1"
            >02. Email</label
          >
          <input
            type="email"
            id="v2-email"
            placeholder="hola@empresa.cl"
            class="w-full bg-white/5 border-b border-white/10 px-4 py-4 text-white placeholder:text-zinc-800 focus:outline-none focus:border-accent transition-all text-sm hover:bg-white/[0.07]"
          />
        </div>

        <!-- Phone -->
        <div class="space-y-3">
          <label
            for="v2-phone"
            class="text-[8px] font-black tracking-[0.3em] uppercase text-zinc-500 block ml-1"
            >03. Teléfono</label
          >
          <input
            type="tel"
            id="v2-phone"
            placeholder="+56 9 ..."
            class="w-full bg-white/5 border-b border-white/10 px-4 py-4 text-white placeholder:text-zinc-800 focus:outline-none focus:border-accent transition-all text-sm hover:bg-white/[0.07]"
          />
        </div>

        <!-- Service -->
        <div class="space-y-3">
          <label
            for="v2-service"
            class="text-[8px] font-black tracking-[0.3em] uppercase text-zinc-500 block ml-1"
            >04. Servicio</label
          >
          <div class="relative">
            <select
              id="v2-service"
              class="w-full bg-white/5 border-b border-white/10 px-4 py-4 text-white focus:outline-none focus:border-accent transition-all text-sm appearance-none cursor-pointer hover:bg-white/[0.07]"
            >
              <option
                value=""
                disabled
                selected
                class="bg-zinc-950 text-zinc-700">Selecciona uno...</option
              >
              <option value="web" class="bg-zinc-950">Arquitectura Web</option>
              <option value="software" class="bg-zinc-950"
                >Software a Medida</option
              >
              <option value="branding" class="bg-zinc-950"
                >Identidad Digital</option
              >
            </select>
            <svg
              class="absolute right-4 top-1/2 -translate-y-1/2 text-zinc-600 pointer-events-none"
              width="12"
              height="12"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m6 9 6 6 6-6"></path></svg
            >
          </div>
        </div>

        <!-- Message -->
        <div class="md:col-span-2 space-y-3">
          <label
            for="v2-message"
            class="text-[8px] font-black tracking-[0.3em] uppercase text-zinc-500 block ml-1"
            >05. Brief</label
          >
          <textarea
            id="v2-message"
            rows="3"
            placeholder="¿Qué tienes en mente?"
            class="w-full bg-white/5 border-b border-white/10 px-4 py-4 text-white placeholder:text-zinc-800 focus:outline-none focus:border-accent transition-all text-sm resize-none hover:bg-white/[0.07]"
          ></textarea>
        </div>

        <!-- Submit -->
        <div class="md:col-span-2 pt-6">
          <button
            type="submit"
            class="group w-full md:w-auto px-12 py-5 bg-white text-black font-black text-[11px] uppercase tracking-[0.3em] hover:bg-accent hover:scale-[1.02] transition-all duration-500 flex items-center justify-center gap-6"
          >
            <span>Enviar Propuesta</span>
            <svg
              class="translate-x-0 group-hover:translate-x-2 transition-transform duration-500"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
            >
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
  function updateClockV2() {
    const clockElement = document.getElementById("santiago-clock-v2");
    if (!clockElement) return;

    const now = new Date();
    const options: Intl.DateTimeFormatOptions = {
      timeZone: "America/santiago",
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
      hour12: false,
    };

    const timeString = new Intl.DateTimeFormat("en-GB", options).format(now);
    clockElement.innerText = timeString;
  }

  setInterval(updateClockV2, 1000);
  updateClockV2();
</script>

<style>
  select {
    background-image: none;
  }
</style>
