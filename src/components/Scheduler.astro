<section
  id="agendar"
  class="py-40 px-8 max-w-9xl mx-auto border-t border-brand-border/30"
>
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-20 items-start">
    <!-- Left: Studio Context -->
    <div class="lg:col-span-5 flex flex-col justify-between py-4">
      <div>
        <div class="flex items-center gap-4 mb-10">
          <div class="w-12 h-px bg-accent"></div>
          <span
            class="text-[10px] font-black tracking-[0.4em] uppercase text-brand-muted"
            >Contacto / V6</span
          >
        </div>
        <h2
          class="text-6xl md:text-8xl font-bold tracking-tighter text-white leading-[0.85] uppercase mb-12"
        >
          HABLEMOS <br />
          <span class="text-accent">DE TU VISIÓN.</span>
        </h2>
        <p
          class="text-xl text-brand-muted font-normal leading-relaxed max-w-md mb-20"
        >
          Estamos listos para transformar tus ideas en una arquitectura digital
          de alto rendimiento.
        </p>

        <div class="flex flex-col gap-10">
          <div class="flex items-start gap-6 group">
            <div
              class="w-12 h-12 border border-white/10 flex items-center justify-center text-accent group-hover:bg-accent group-hover:text-black transition-all"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M22 17a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v10Z"
                ></path><path d="m22 7-10 7L2 7"></path></svg
              >
            </div>
            <div>
              <span
                class="text-[9px] font-black tracking-[0.2em] uppercase text-zinc-600 mb-1 block"
                >Email Directo</span
              >
              <a
                href="mailto:hola@webkode.cl"
                class="text-2xl font-bold text-white hover:text-accent transition-colors tracking-tighter"
                >hola@webkode.cl</a
              >
            </div>
          </div>

          <div class="flex items-start gap-6 group">
            <div
              class="w-12 h-12 border border-white/10 flex items-center justify-center text-accent group-hover:bg-accent group-hover:text-black transition-all"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path></svg
              >
            </div>
            <div>
              <span
                class="text-[9px] font-black tracking-[0.2em] uppercase text-zinc-600 mb-1 block"
                >Llámanos</span
              >
              <span class="text-2xl font-bold text-white tracking-tighter"
                >+(56) 9 0000 0000</span
              >
            </div>
          </div>
        </div>
      </div>

      <div class="mt-20 pt-10 border-t border-white/10 flex items-center gap-6">
        <div
          class="font-mono text-[10px] text-zinc-500 uppercase tracking-widest"
        >
          HORA Los Andes / <span
            id="santiago-clock"
            class="text-white font-bold tabular-nums">00:00:00</span
          >
        </div>
      </div>
    </div>

    <!-- Right: Form Card -->
    <div class="lg:col-span-7">
      <div
        class="bg-zinc-950/80 border border-white/10 p-8 md:p-16 relative overflow-hidden backdrop-blur-sm"
      >
        <!-- Decoration lines -->
        <div
          class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-white/10 to-transparent"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-full h-px bg-linear-to-r from-transparent via-white/10 to-transparent"
        >
        </div>

        <form class="flex flex-col gap-10 relative z-10">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <div class="flex flex-col gap-3">
              <label
                for="name"
                class="text-[9px] font-black tracking-[0.3em] uppercase text-zinc-600"
                >01. Nombre Completo</label
              >
              <input
                type="text"
                id="name"
                placeholder="Ej. Juan Pérez"
                class="bg-white/5 border border-white/5 px-6 py-5 text-white placeholder:text-zinc-700 focus:outline-none focus:border-accent transition-all font-medium text-sm"
              />
            </div>
            <div class="flex flex-col gap-3">
              <label
                for="company-email"
                class="text-[9px] font-black tracking-[0.3em] uppercase text-zinc-600"
                >02. Email Corporativo</label
              >
              <input
                type="email"
                id="company-email"
                placeholder="hola@tuempresa.com"
                class="bg-white/5 border border-white/5 px-6 py-5 text-white placeholder:text-zinc-700 focus:outline-none focus:border-accent transition-all font-medium text-sm"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <div class="flex flex-col gap-3">
              <label
                for="phone"
                class="text-[9px] font-black tracking-[0.3em] uppercase text-zinc-600"
                >03. Teléfono de Contacto</label
              >
              <input
                type="tel"
                id="phone"
                placeholder="+56 9 1234 5678"
                class="bg-white/5 border border-white/5 px-6 py-5 text-white placeholder:text-zinc-700 focus:outline-none focus:border-accent transition-all font-medium text-sm"
              />
            </div>
            <div class="flex flex-col gap-3">
              <label
                for="service"
                class="text-[9px] font-black tracking-[0.3em] uppercase text-zinc-600"
                >04. Servicio Requerido</label
              >
              <div class="relative">
                <select
                  id="service"
                  class="w-full bg-white/5 border border-white/5 px-6 py-5 text-white focus:outline-none focus:border-accent transition-all font-medium text-sm appearance-none cursor-pointer"
                >
                  <option
                    value=""
                    disabled
                    selected
                    class="bg-zinc-950 text-zinc-700"
                    >Selecciona un servicio</option
                  >
                  <option value="web-design" class="bg-zinc-950"
                    >Diseño y Arquitectura Web</option
                  >
                  <option value="software" class="bg-zinc-950"
                    >Desarrollo de Software a Medida</option
                  >
                  <option value="branding" class="bg-zinc-950"
                    >Identidad y Branding Digital</option
                  >
                  <option value="ecommerce" class="bg-zinc-950"
                    >E-commerce de Alto Rendimiento</option
                  >
                  <option value="maintenance" class="bg-zinc-950"
                    >Mantenimiento Boutique</option
                  >
                </select>
                <div
                  class="absolute right-6 top-1/2 -translate-y-1/2 pointer-events-none text-zinc-500"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"><path d="m6 9 6 6 6-6"></path></svg
                  >
                </div>
              </div>
            </div>
          </div>

          <div class="flex flex-col gap-3">
            <label
              for="message"
              class="text-[9px] font-black tracking-[0.3em] uppercase text-zinc-600"
              >05. Descripción del Proyecto</label
            >
            <textarea
              id="message"
              rows="4"
              placeholder="¿Qué tienes en mente? Describe brevemente tu visión..."
              class="bg-white/5 border border-white/5 px-6 py-5 text-white placeholder:text-zinc-700 focus:outline-none focus:border-accent transition-all font-medium resize-none text-sm"
            ></textarea>
          </div>

          <button
            type="submit"
            class="group w-full bg-white text-black py-8 text-[12px] font-black uppercase tracking-[0.4em] hover:bg-accent transition-all duration-700 flex items-center justify-center gap-8"
          >
            <span>Ejecutar Propuesta</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="translate-x-0 group-hover:translate-x-3 transition-transform duration-500"
              ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
            >
          </button>
        </form>

        <div
          class="mt-12 pt-8 border-t border-brand-border/30 flex justify-between items-center text-[9px] font-mono text-zinc-700 uppercase tracking-widest"
        >
          <span>Secure Submission Protocol</span>
          <span>© 2026 Webkode | Diseño Web </span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function updateClock() {
    const clockElement = document.getElementById("santiago-clock");
    if (!clockElement) return;

    const now = new Date();
    // santiago is UTC-3 (normally, depends on DST)
    const options: Intl.DateTimeFormatOptions = {
      timeZone: "America/santiago",
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
      hour12: false,
    };

    const timeString = new Intl.DateTimeFormat("en-GB", options).format(now);
    clockElement.innerText = timeString;
  }

  setInterval(updateClock, 1000);
  updateClock();
</script>
